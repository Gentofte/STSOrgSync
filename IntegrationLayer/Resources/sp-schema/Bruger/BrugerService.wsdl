    <wsdl:operation name="soeg">
      <soap:operation soapAction="http://kombit.dk/sts/organisation/bruger/soeg"/>
      <wsdl:input>
         <!--input policy reference-->
        <wsp:PolicyReference URI="#Input_Policy"/>
        <soap:body use="literal"/>
      </wsdl:input>
      <wsdl:output>
