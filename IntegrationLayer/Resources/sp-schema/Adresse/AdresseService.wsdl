    <wsdl:operation name="ret">
      <soap:operation soapAction="http://kombit.dk/sts/organisation/adresse/ret"/>
      <wsdl:input>
        <!-- input policy reference -->
        <wsp:PolicyReference URI="#Input_Policy"/>
        <soap:body use="literal"/>
      </wsdl:input>
      <wsdl:output>
