  </wsdl:message>
  <wsdl:message name="PersonLaesRequestMessage">
    <wsdl:part name="request" element="tns:PersonLaesRequest"/>
  </wsdl:message>
  <wsdl:message name="PersonLaesResponseMessage">
    <wsdl:part name="response" element="tns:PersonLaesResponse"/>
  </wsdl:message>
  <wsdl:message name="PersonOpretRequestMessage">
    <wsdl:part name="request" element="tns:PersonOpretRequest"/>
  </wsdl:message>
  <wsdl:message name="PersonOpretResponseMessage">
    <wsdl:part name="response" element="tns:PersonOpretResponse"/>
  </wsdl:message>
  <wsdl:message name="PersonPassiverRequestMessage">
    <wsdl:part name="request" element="tns:PersonPassiverRequest"/>
  </wsdl:message>
  <wsdl:message name="PersonPassiverResponseMessage">
    <wsdl:part name="response" element="tns:PersonPassiverResponse"/>
  </wsdl:message>
  <wsdl:message name="PersonRetRequestMessage">
    <wsdl:part name="request" element="tns:PersonRetRequest"/>
  </wsdl:message>
  <wsdl:message name="PersonRetResponseMessage">
    <wsdl:part name="response" element="tns:PersonRetResponse"/>
